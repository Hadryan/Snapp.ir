block pageTitle
    title #{appConfig.app.name} #{appConfig.app.version}
block content
    .table-toolbar
        if data && data.length
            form#frmUser(name='frmUser', method='POST', action='')
                table#example2.table.table-bordered.table-hover
                    thead
                        tr
                            th.text-left
                                | ردیف
                            th.text-left
                                | برند خودرو
                            th.text-left
                                | مدل خودرو
                            th.text-left
                                | شهر
                            th.text-left
                                | تعداد موجود





                    tbody
                        each row, index in data
                            tr.odd.gradeX
                                td.text-left
                                    | #{row.id}
                                td.text-left
                                    | #{row.brand_name}
                                td.text-left
                                    | #{row.model_name}
                                td.text-left
                                    | #{row.city_name}
                                td.text-left
                                    | #{row.total_number}

        else
            h1 هنوز رکوردی تعریف نگردیده است

script.
    jQuery(document).ready(function () {
        $('.g2j').each(function (i, el) {
            $(el).html(g2j($(el).html()));
        });
        $('#example2').dataTable({
            paginate: true,
            "order": [1, "desc"],
            "info": false,
            "bFilter": false,
            "bSort": false
        });
    });